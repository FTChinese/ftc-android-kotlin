<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="buttonEnabled"
            type="Boolean" />
        <variable
            name="product"
            type="com.ft.ftchinese.model.paywall.PaywallProduct" />
        <variable
            name="introPrice"
            type="com.ft.ftchinese.model.ftcsubs.Price" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/product_heading_tv"
                style="@style/OrigamiText.Heading1.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{product.heading}"
                android:background="@drawable/bottom_border_teal"
                android:layout_marginBottom="@dimen/space_16"/>

            <Button
                android:id="@+id/btn_intro"
                style="@style/AppButton.InlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="@{introPrice == null ? View.GONE : View.VISIBLE}"
                android:text="@{introPrice.title}"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_teal_24"/>

            <!-- Show a list of price button under this product -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_prod_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Show a list of text describing this product. -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_prod_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/product_small_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{product.smallPrint}"
                android:visibility="@{product.smallPrint == null ? View.GONE : View.VISIBLE}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>

