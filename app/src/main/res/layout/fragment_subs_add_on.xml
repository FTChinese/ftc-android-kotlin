<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.member.SubsAddOnFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/space_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subs_addon_title"
                style="@style/OrigamiText.Heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="待启用订阅时长"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/subs_addon_subheading"
                style="@style/OrigamiText.Body2.Warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="此订阅时间将在现有订阅服务到期后使用"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subs_addon_details"
                android:layout_marginTop="@dimen/space_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
