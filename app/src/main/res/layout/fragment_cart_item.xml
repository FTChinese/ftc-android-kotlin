<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pay.CartItemFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBlack5"
    app:contentPadding="16dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_net_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/formatter_price"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlack"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/tv_product_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/formatter_tier_cycle"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
