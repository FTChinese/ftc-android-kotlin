<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="cartItem"
            type="com.ft.ftchinese.ui.product.PriceCardParams" />
    </data>

    <androidx.cardview.widget.CardView
        tools:context=".ui.pay.CartItemFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingTop="@dimen/space_32"
        app:contentPaddingBottom="@dimen/space_32"
        app:contentPaddingLeft="@dimen/space_16"
        app:contentPaddingRight="@dimen/space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_plan_name"
                style="@style/OrigamiText.Heading3.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{cartItem.heading}"
                android:textAlignment="center" />

            <TextView
                style="@style/OrigamiText.Body1.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{cartItem.payable.string()}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{cartItem.smallPrint == null ? View.GONE : View.VISIBLE}"
                android:text="@{cartItem.smallPrint}"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

