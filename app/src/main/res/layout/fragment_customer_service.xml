<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        tools:context=".ui.paywall.CustomerServiceFragment">

        <TextView
            style="@style/OrigamiText.Body1"
            android:id="@+id/customer_service_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/customer_service_email"
            android:text="@string/heading_customer_service" />

        <TextView
            android:id="@+id/customer_service_email"
            style="@style/OrigamiText.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/customer_service_email"
            android:textColor="@color/colorTeal"
            app:layout_constraintBottom_toBottomOf="@id/customer_service_title"
            app:layout_constraintStart_toEndOf="@id/customer_service_title"
            app:layout_constraintTop_toTopOf="@id/customer_service_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

