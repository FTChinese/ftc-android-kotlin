<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="warning"
            type="String" />
        <variable
            name="methodsEnabled"
            type="com.ft.ftchinese.ui.checkout.PaymentMethodsEnabled" />
        <variable
            name="paymentButton"
            type="com.ft.ftchinese.ui.checkout.PaymentButton" />
        <variable
            name="stripeTrialMessage"
            type="String" />
        <variable
            name="inProgress"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pay.CheckOutActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/simple_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/pay_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/product_in_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_8"/>

                <TextView
                    android:id="@+id/pay_warning"
                    style="@style/OrigamiText.Body2.Warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{warning}"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:textAlignment="textStart"/>

                <!-- Select payment method -->
                <RadioGroup
                    android:id="@+id/payment_methods"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16">

                    <RadioButton
                        android:id="@+id/alipay_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:button="@null"
                        android:drawableStart="@drawable/alipay"
                        android:drawableEnd="@drawable/btn_radio"
                        android:drawablePadding="20dp"
                        android:text="@string/pay_brand_ali"
                        android:textSize="18sp"
                        android:enabled="@{methodsEnabled.alipay &amp; !inProgress}"/>

                    <RadioButton
                        android:id="@+id/wxpay_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:button="@null"
                        android:drawableStart="@drawable/wechat_pay"
                        android:drawableEnd="@drawable/btn_radio"
                        android:drawablePadding="20dp"
                        android:text="@string/pay_brand_wechat"
                        android:textSize="18sp"
                        android:enabled="@{methodsEnabled.wechat &amp; !inProgress }"/>

                    <!-- NOTE: the transparent background added here
                     is just a hack. It seems when setting button to null, there is a round button flasing in the background when you clicked a radio button. -->
                    <RadioButton
                        android:id="@+id/stripe_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"
                        android:button="@null"
                        android:enabled="@{methodsEnabled.stripe &amp; !inProgress}"
                        android:drawableStart="@drawable/stripe"
                        android:drawableEnd="@drawable/btn_radio"
                        android:drawablePadding="20dp"
                        android:text="@string/pay_brand_stripe"
                        android:textSize="18sp"/>

                </RadioGroup>

                <TextView
                    style="@style/OrigamiText.Body2.Warning"
                    android:textAlignment="textStart"
                    android:id="@+id/tv_stripe_trial_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:text="@{stripeTrialMessage}"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppButton.BottomSticky"
            android:text="@{paymentButton.text ?? @string/check_out}"
            android:enabled="@{paymentButton.enabled &amp; !inProgress}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

        <include layout="@layout/progress_indicator_circular"
            bind:inProgress="@{inProgress}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

