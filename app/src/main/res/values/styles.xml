<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWheat</item>
        <item name="colorPrimaryDark">@color/colorBlack30</item>
        <item name="colorAccent">@color/colorClaret</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPaper</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Drawer" parent="AppTheme">
        <item name="colorPrimary">@color/colorTeal</item>
        <!--<item name="colorAccent">@color/colorClaret</item>-->
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorBlack20</item>
    </style>

    <style name="Origami" parent="AppTheme">

        <!-- Window colors -->
        <item name="android:windowBackground">@color/colorPaper</item>

        <!-- Button Style -->
        <item name="buttonStyle">@style/OrigamiButton.Primary</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/OrigamiToolbar</item>

        <item name="preferenceTheme">@style/PrefTheme</item>
    </style>

    <style name="PrefTheme" parent="PreferenceThemeOverlay">

    </style>

    <style name="OrigamiButton" parent="Widget.AppCompat.Button" />

    <!-- This is the default Widget.AppCompat.Button style. You override them.-->
    <!-- See https://chromium.googlesource.com/android_tools/+/HEAD/sdk/extras/android/support/v7/appcompat/res/values/styles_base.xml -->
    <!--<item name="android:background">@drawable/abc_btn_default_mtrl_shape</item>-->
    <!--<item name="android:textAppearance">?android:attr/textAppearanceButton</item>-->
    <!--<item name="android:minHeight">48dip</item>-->
    <!--<item name="android:minWidth">88dip</item>-->
    <!--<item name="android:focusable">true</item>-->
    <!--<item name="android:clickable">true</item>-->
    <!--<item name="android:gravity">center_vertical|center_horizontal</item>-->

    <style name="OrigamiButton.Primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OrigamiButton.Primary.Small">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="OrigamiButton.Secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/colorTeal</item>
    </style>

    <style name="OrigamiButton.Secondary.Small">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="OrigamiButton.Secondary.Flat">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
    </style>

    <style name="OrigamiButton.Inline">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorTeal</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="OrigamiToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorWheat</item>
    </style>

    <style name="TitleBarButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:textColor">@color/radio_button_text</item>
        <!--<item name="android:padding">8dp</item>-->
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Origami.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Origami.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FTCText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FTCTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="FTCLink" parent="FTCText">
        <item name="android:textColor">@color/colorTeal</item>
    </style>

    <style name="SectionHead">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Origami.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
