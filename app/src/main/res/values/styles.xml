<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Origami" parent="AppTheme">

        <item name="colorPrimary">@color/colorWheat</item>
        <item name="colorPrimaryDark">@color/colorBlack30</item>
        <item name="colorAccent">@color/colorClaret</item>

        <!-- Window colors -->
        <item name="android:windowBackground">@color/colorPaper</item>

        <!-- Button Style -->
        <item name="buttonStyle">@style/OrigamiButton</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/OrigamiToolbar</item>

    </style>

    <style name="OrigamiButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorTeal</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="OrigamiToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorWheat</item>
    </style>

    <style name="OrigamiRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@color/colorTeal</item>
    </style>

    <style name="Origami.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Origami.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
