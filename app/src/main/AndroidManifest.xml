<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />

            <data android:mimeType="text/plain" />
        </intent>

        <!-- https://developers.weixin.qq.com/doc/oplatform/Mobile_App/Access_Guide/Android.html#jump2 -->
        <package android:name="com.tencent.mm" />
        <package android:name="com.eg.android.AlipayGphone" />
        <package android:name="hk.alipay.wallet" />
    </queries> <!-- Wxpay actually does not require extra permissions. -->
    <!-- Alipay permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- If your app uses scoped storage, it should request storage-related permissions only for devices that run Android 9 (API level 28) or lower. -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" /> <!-- Required by Google advertising -->
    <!-- https://developers.google.com/android/reference/com/google/android/gms/ads/identifier/AdvertisingIdClient.Info -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.auth.password.PasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".ui.share.ScreenshotActivity"
            android:exported="false" />
        <activity
            android:name=".ui.wxinfo.WxInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stripewallet.StripeWalletActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SubsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AboutListActivity"
            android:label="@string/title_about_us"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.webpage.WebpageActivity"
            android:parentActivityName=".ui.AboutListActivity" />
        <activity
            android:name=".ui.checkout.BuyerInfoActivity"
            android:label="完善信息" />
        <activity
            android:name=".TestActivity"
            android:label="Test"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.main.SplashActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.search.SearchableActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.channel.ChannelActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.article.ArticleActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.login.AuthActivity"
            android:label="@string/title_login"
            android:parentActivityName=".ui.main.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.account.AccountActivity"
            android:label="@string/title_account"
            android:parentActivityName=".ui.main.MainActivity"
            android:windowSoftInputMode="adjustResize" /> <!-- <activity -->
        <!-- android:name=".ui.customer.CustomerActivity" -->
        <!-- android:label="@string/stripe_setting" -->
        <!-- android:parentActivityName=".ui.account.AccountActivity" /> -->
        <activity
            android:name=".ui.wxlink.LinkFtcActivity"
            android:label="@string/title_link_email"
            android:parentActivityName=".ui.account.AccountActivity" />
        <activity
            android:name=".ui.wxlink.UnlinkActivity"
            android:label="@string/title_unlink"
            android:parentActivityName=".ui.wxinfo.WxInfoActivity" />
        <activity android:name=".ui.MemberActivity" />
        <activity
            android:name=".ui.stripepay.StripeSubActivity"
            android:exported="true"
            android:label="@string/pay_method_stripe"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="stripe-post-authentication-return-url"
                    android:scheme="ftc" />
            </intent-filter>
        </activity>
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="wxacddf1c20516eb69" />
            </intent-filter>
        </activity>
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="wxacddf1c20516eb69" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.checkout.LatestInvoiceActivity"
            android:label="@string/title_latest_invoice" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/action_settings" />
        <activity android:name=".ui.release.ReleaseActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ft.ftchinese.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".service.NewsMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>

            <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="@string/news_notification_channel_id" />
        </service>
    </application>

</manifest>
